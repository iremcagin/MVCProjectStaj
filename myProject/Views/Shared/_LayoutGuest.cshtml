@model CategoriesModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - myProject</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/myProject.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital@0;1&display=swap" rel="stylesheet">
    <style>
        body {
            background-color:#fefefe;
            font-family: 'Montserrat', sans-serif;
        }
    </style>
</head>


<body>
    <header class=" d-flex justify-content-center" style=" font-family: " Montserrat", sans-serif;">
        <nav class="navbar navbar-expand-md col-md-10 border-bottom box-shadow mb-3" >
            <div class="container">
                <!-- Logo with image -->
                <a class="navbar-brand" href="#">
                    <img src="~/images/logooo.png" alt="Your Logo" height="80">
                </a>

                <!-- Toggle button for mobile -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Navbar links -->
                <div class="collapse navbar-collapse justify-content-center" id="navbarSupportedContent" style="font-size:16px;">
                    <ul class="navbar-nav me-auto mb-2 gap-3"  style="margin-left:40px;">
                        <!-- Main categories -->
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="#">Home</a>
                        </li>
                        @{
                            CategoriesModel categoriesModel = new CategoriesModel();
                            var furnitureCategories = categoriesModel.GetAllFurnitureCategories();
                            var decorationCategories = categoriesModel.GetAllDecorationCategories();


                            <li class="nav-item dropdown" id="furnitureDropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Furniture
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="furnitureDropdown" data-bs-auto-close="outside" style="font-size:15px;">
                                    @foreach (var category in furnitureCategories)
                                    {
                                        <li><a class="dropdown-item  align-items-center" asp-area="" asp-controller="Guest" asp-action="@category.CategoryName"> <i class="las la-caret-right" style="margin-right:5px;"></i>@category.CategoryName</a></li>
                                    }
                                </ul>
                            </li>


                            <li class="nav-item dropdown" id="decorationDropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Decoration
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="decorationDropdown" data-bs-auto-close="outside" style="font-size:14px;">
                                    @foreach (var category in decorationCategories)
                                    {
                                        <li><a class="dropdown-item align-items-center" asp-area="" asp-controller="Guest" asp-action="@category.CategoryName"> <i class="las la-caret-right" style="margin-right:5px;"></i> @category.CategoryName</a></li>
                                    }
                                </ul>
                            </li>
                        }
                    </ul>
                </div>

                <!-- Right-aligned items -->
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Guest" asp-action="Login">
                                <i class="la la-user"></i> Login
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted col-md-2" style="position: fixed; width:100%; bottom: 0;">
        <div class="" style="font-size:12px; margin-left:4px;">
            &copy; 2024 - ModernNest -  <a style="text-decoration: none; color:#4e54c8;" href="https://github.com/iremcagin">İrem Çağın Yurttürk</a>
        </div>
    </footer>

    
    <style>
        #furnitureDropdown .nav-link:hover,
        #furnitureDropdown .nav-link:focus,
        #decorationDropdown .nav-link:hover,
        #decorationDropdown .nav-link:focus {
            color: #fcadb2;
            background-color: transparent; 
            border-color: transparent;
            outline: none; 
            box-shadow: none; 
        }

    </style>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var dropdownElement = document.getElementById('furnitureDropdown');

            dropdownElement.addEventListener('mouseover', function () {
                var dropdown = new bootstrap.Dropdown(dropdownElement.querySelector('.dropdown-toggle'));
                dropdown.show();
            });

            dropdownElement.addEventListener('mouseout', function () {
                var dropdown = new bootstrap.Dropdown(dropdownElement.querySelector('.dropdown-toggle'));
                dropdown.hide();
            });

            dropdownElement.addEventListener('click', function (event) {
                event.stopPropagation();
            });
        });

        document.addEventListener('DOMContentLoaded', function () {
            var dropdownElements = [document.getElementById('furnitureDropdown'), document.getElementById('decorationDropdown')];

            dropdownElements.forEach(function (dropdownElement) {
                dropdownElement.addEventListener('mouseover', function () {
                    var dropdown = new bootstrap.Dropdown(dropdownElement.querySelector('.dropdown-toggle'));
                    dropdown.show();
                });

                dropdownElement.addEventListener('mouseout', function () {
                    var dropdown = new bootstrap.Dropdown(dropdownElement.querySelector('.dropdown-toggle'));
                    dropdown.hide();
                });

                dropdownElement.addEventListener('click', function (event) {
                    event.stopPropagation();
                });
            });
        });



    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
