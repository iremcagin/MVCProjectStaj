
@{
    ViewData["Title"] = "User";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
    var productDetails = ViewBag.ProductDetails as myProject.Models.ProductDetailsModel;

}




<div class="container">
    <!-- Product Details Section -->
    <div class="card mb-4">
        <div class="card-header">
            <h2>@productDetails.Product.Name</h2>
        </div>
        <div class="card-body">
            <div class="row">
                @if (productDetails.Product.Images != null && productDetails.Product.Images.Count > 0)
                {
                    <img src="~/images/@productDetails.Product.Category/@productDetails.Product.Images[0]" alt="Product Image" class="img-fluid" />
                }
                else
                {
                    <img src="~/images/placeholder-1.png" alt="Placeholder Image" class="img-fluid" />
                }
                <div class="col-md-8">
                    <h3 class="text-primary">$@productDetails.Product.Price</h3>
                    <p>@productDetails.Product.Description</p>
                    <ul class="list-group">
                        <li class="list-group-item"><strong>Category:</strong> @productDetails.Product.Category</li>
                        <li class="list-group-item"><strong>Stock:</strong> @productDetails.Product.Stock</li>
                        <li class="list-group-item"><strong>Rating:</strong> @productDetails.Product.Rating</li>
                        <li class="list-group-item"><strong>Favorites:</strong> @productDetails.Product.Favorite</li>
                        <li class="list-group-item"><strong>Clicks:</strong> @productDetails.Product.Clicked</li>
                        <li class="list-group-item"><strong>Available:</strong> @productDetails.Product.isAvailable</li>
                        <li class="list-group-item"><strong>Created At:</strong> @productDetails.Product.CreatedAt.ToShortDateString()</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>



    <!-- Company Details Section -->
    <div class="card mb-4">
        <div class="card-header">
            <h3>Company Information</h3>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    <img src="~/images/_Logos/@productDetails.Company.LogoUrl" alt="Company Logo" class="img-fluid" />
                </div>
                <div class="col-md-8">
                    <h4>@productDetails.Company.CompanyName</h4>
                    <p>@productDetails.Company.Description</p>
                    <ul class="list-group">
                        <li class="list-group-item"><strong>Name:</strong> @productDetails.User.Name @productDetails.User.Surname</li>
                        <li class="list-group-item"><strong>Address:</strong> @productDetails.Company.Address</li>
                        <li class="list-group-item"><strong>Phone Number:</strong> @productDetails.Company.PhoneNumber</li>
                        <li class="list-group-item"><strong>Email:</strong> @productDetails.Company.Email</li>
                        <li class="list-group-item"><strong>Tax ID Number:</strong> @productDetails.Company.TaxIDNumber</li>
                        <li class="list-group-item"><strong>IBAN:</strong> @productDetails.Company.IBAN</li>
                        <li class="list-group-item"><strong>Created At:</strong> @productDetails.Company.CreatedAt.ToShortDateString()</li>
                        <li class="list-group-item"><strong>Rating:</strong> @productDetails.Company.Rating</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>



    <!-- Product Reviews Section -->
    <div class="card mb-4">
        <div class="card-header">
            <h3>Product Reviews</h3>
        </div>
        <div class="card-body">
            @if (productDetails.ProductReviews.Any())
        {
                int i = 0;
                foreach (var review in productDetails.ProductReviews)
            {
                <div class="mb-3">
                    <h5>@productDetails.ReviewedUsers[i].Name</h5>
                    <p><strong>Rating:</strong> @review.Rating</p>
                    <p>@review.Review</p>
                    <p><small>Reviewed on @review.CreatedAt.ToShortDateString()</small></p>
                </div>
                    i ++;
                }
        }
        else
        {
            <p>No reviews yet.</p>
        }
        </div>
    </div>





   
</div>
