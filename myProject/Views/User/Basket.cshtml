@{
    ViewData["Title"] = "User";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
    var allProductsInBasket = ViewBag.allProductsInBasket as List<ProductModel>;
    var ImagesOfProductsInBasket = ViewBag.ImagesOfProductsInBasket as List<Tuple<int, string>>;
    decimal totalPrice = ViewBag.TotalPrice ?? 0.00m;
}


<style>
    .no-outline:focus,
    .no-outline:active {
        outline: none !important;
        box-shadow: none !important;
    }
</style>


<!-- All Products -->

<div class="container mt-2">
    <div class="d-flex justify-content-between align-items-center p-2"  style="border-bottom: 1px solid black;">
        <h5 class="" style=" font-size: 20px; font-weight:600;">
            <i class="las la-shopping-cart"></i> Shopping Cart
        </h5>

        <div class="d-flex justify-content-between align-items-center">
            <!-- Toplam Fiyat -->
            <div style="margin-right:15px;">
                <span style="font-size: 18px; font-weight: bold;">Total Price:</span>
                <span style="font-size: 18px; font-weight: bold; margin-left: 10px;">@totalPrice.ToString("C")</span>
            </div>

            <!-- Satın Alma Butonu -->
            <a href="/User/Checkout" class="btn btn-outline-primary" style="font-size: 16px; font-weight:600;">
                <i class="las la-credit-card"></i> Purchase
            </a>
        </div>
    </div>


    <div class="row row-cols-1 row-cols-md-6 g-4 p-2">
        @for (int j = 0; j < allProductsInBasket.Count; j++)
        {
            var product = allProductsInBasket[j];
            string productImage = null;

            if (ImagesOfProductsInBasket != null)
            {
                var imageTuple = ImagesOfProductsInBasket.FirstOrDefault(item => item.Item1 == product.ProductId);
                if (imageTuple != null)
                {
                    productImage = imageTuple.Item2;
                }
            }
            string imageUrl = productImage != null
            ? Url.Content($"~/images/{product.Category}/{productImage}")
            : Url.Content("~/images/placeholder-1.png");


            <div class="col">
                <div class="card h-100 d-flex flex-column justify-content-between">

                    <!-- Product Image -->
                    <div class="position-relative">
                        <a href="/User/ProductDetails/@product.ProductId">
                            <img src="@imageUrl" class="card-img-top" alt="@product.Name">
                        </a>
                        <a href="/User/DeleteItemInBasket/@product.ProductId" class="btn btn-like position-absolute top-0 end-0 no-outline" style="font-size:21px;"><i class="las la-trash-alt"></i></a>
                    </div>
                  
                    <div class="card-body d-flex flex-column justify-content-between" >
                        <div class="d-flex flex-column" style="font-size:15px;">
                            <h5 class="card-title"><span style="font-size:15px; font-weight:600;"> @product.Name </span><span style="font-size:14px; color:grey;">@product.Description</span></h5>

                            <div class="d-flex">
                                <p style="margin-right:5px;  font-size:14px; margin-top:2px;">@product.Rating</p>

                                @if (@product.Rating >= 0 && @product.Rating <= 5)
                                {

                                    var fullStars = (int)Math.Floor(@product.Rating);
                                    var halfStar = (@product.Rating - fullStars) >= 0.5;
                                    // Boş yıldızların sayısı
                                    var emptyStars = 5 - fullStars - (halfStar ? 1 : 0);


                                    for (int i = 0; i < fullStars; i++)
                                    {
                                        <span class="star full-star">&#9733;</span>
                                    }

                                    if (halfStar)
                                    {
                                        <span class="star half-star">&#9733;</span>
                                    }

                                    for (int i = 0; i < emptyStars; i++)
                                    {
                                        <span class="star">&#9734;</span>
                                    }
                                }
                            </div>

                        <h5 class="card-text" style="font-size: 16px; font-weight:600; color:#b46c2c; margin-top:15px;">$@product.Price</h5>
                        </div>

                    </div>


                </div>
            </div>
        }

    </div>
</div>




<style>
    .star {
        font-size: 16px;
    }

    .full-star {
        color: #ffd700;
    }

    .half-star {
        color: #ffd700;
        position: relative;
    }

        .half-star::before {
            content: '\2605';
            color: #000;
            position: absolute;
            left: 0;
            width: 55%;
            overflow: hidden;
        }

    .empty-star {
        color: #d3d3d3;
    }

        .empty-star::before {
            content: '\2605';
            color: #000;
            position: absolute;
            overflow: hidden;
        }
</style>