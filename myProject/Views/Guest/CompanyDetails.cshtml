@model myProject.Models.ModelForUserPages
@{
    ViewData["Title"] = "Guest";
    Layout = "~/Views/Shared/_LayoutGuest.cshtml";
}



<!-- Company Information Section -->
<div class="container mt-3">
    <div class="company-card">
        <!-- Banner -->
        <div class="banner position-relative">
            <img src="~/images/_Banners/@Model.companyDetails.BannerUrl" alt="Company Banner" class="img-fluid w-100" style="height: 300px; object-fit: cover;">
            <!-- Logo -->
            <img src="~/images/_Logos/@Model.companyDetails.LogoUrl" alt="Company Logo" class="company-logo position-absolute" style="bottom: 10px; left: 10px; height: 100px; width: 100px; object-fit: cover; border-radius:100%;">
        </div>
        <!-- Company Details -->
        <div class="company-details mt-3">
            <h2>@Model.companyDetails.CompanyName</h2>
            <p>@Model.companyDetails.Description</p>
            <p><strong>Address:</strong> @Model.companyDetails.Address</p>
            <p><strong>Phone:</strong> @Model.companyDetails.PhoneNumber</p>
            <div class="d-flex justify-content-between">
                <p><strong>Email:</strong> @Model.companyDetails.Email</p>
            </div>
        </div>
    </div>
</div>




<!-- All Products -->
<h4 class=" mb-4" style="border-bottom: 1px solid black;  margin-top:80px;  margin-bottom:80px;">All Products</h4>
<div class="container mt-3 " style="">
    <div class="row row-cols-1 row-cols-md-6 g-4 p-2">
        @foreach (var product in Model.companyProducts)
        {
            <div class="col">
                <div class="card h-100">
                    @if (product.Images.Count > 0)
                    {
                        <div class="position-relative">
                            <a href="/Guest/ProductDetails/@product.ProductId">
                                <img src="~/images/@product.Category/@product.Images[0]" class="card-img-top" alt="@product.Name">
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="position-relative">
                            <a href="/Guest/ProductDetails/@product.ProductId" class="">
                                <img src="~/images/placeholder-1.png" class="card-img-top" alt="Placeholder">
                            </a>
                        </div>
                    }
                    <div class="card-body d-flex flex-column justify-content">
                        <div class="d-flex flex-column" style="font-size:15px;">
                            <h5 class="card-title">
                                <span style="font-size:15px; font-weight:600;"> @product.Name </span><span style="font-size:14px; color:grey;  font-size: 14px;
                                                    color: grey;
                                                    max-height: 5.5em;
                                                    overflow: hidden;
                                                    text-overflow: ellipsis;
                                                    line-height: 1.1em; /* Adjust according to your line height */
                                                    -webkit-line-clamp: 5; /* For WebKit browsers */
                                                    -webkit-box-orient: vertical; /* For WebKit browsers */
                                                    display: -webkit-box; /* For WebKit browsers */">@product.Description</span>
                            </h5>

                            <div class="d-flex">
                                <p style="margin-right:5px;  font-size:14px; margin-top:2px;">@product.Rating</p>

                                @if (@product.Rating >= 0 && @product.Rating <= 5)
                                {

                                    var fullStars = (int)Math.Floor(@product.Rating);
                                    var halfStar = (@product.Rating - fullStars) >= 0.5;
                                    // Boş yıldızların sayısı
                                    var emptyStars = 5 - fullStars - (halfStar ? 1 : 0);


                                    for (int i = 0; i < fullStars; i++)
                                    {
                                        <i class="las la-star" style="color: #ffd700"></i>
                                    }

                                    if (halfStar)
                                    {
                                        <i class="las la-star-half-alt" style="color: #ffd700"></i>
                                    }

                                    for (int i = 0; i < emptyStars; i++)
                                    {
                                        <span class="las la-star" style="color: lightgrey"></span>
                                    }
                                }
                            </div>

                        </div>

                        <h5 class="card-text" style="font-size: 16px; font-weight:600; color:#b46c2c; margin-top:15px;">$@product.Price</h5>
                    </div>


                </div>
            </div>
        }

    </div>
</div>




<style>
    .card-img-top {
        width: 100%;
        height: 140px; /* Set your desired height */
        object-fit: cover; /* Ensures the image covers the area without distortion */
    }



    /* Company Card Container */
    .company-card {
        border: 1px solid #ddd;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        background-color: #fff;
        margin-bottom: 20px;
    }

    /* Banner */
    .banner {
        position: relative;
        width: 100%;
        height: 250px; /* Adjust height as needed */
        overflow: hidden;
    }

        .banner img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    /* Company Logo */
    .company-logo {
        position: absolute;
        bottom: 10px;
        left: 10px;
        border-radius: 50%;
        border: 4px solid #fff;
        height: 80px; /* Adjust size as needed */
        width: 80px; /* Adjust size as needed */
        object-fit: cover;
    }

    /* Company Details */
    .company-details {
        padding: 20px;
    }

        .company-details h2 {
            font-size: 24px;
            margin-bottom: 15px;
            font-weight: 700;
        }

        .company-details p {
            font-size: 16px;
            margin-bottom: 10px;
            line-height: 1.5;
        }

            .company-details p strong {
                font-weight: 600;
            }

        .company-details .btn {
            background-color: #343a40; /* Dark button color */
            color: #fff;
            border: none;
            border-radius: 4px;
            padding: 10px 20px;
            text-transform: uppercase;
            font-weight: bold;
        }

            .company-details .btn:hover {
                background-color: #495057; /* Slightly lighter on hover */
            }

</style>