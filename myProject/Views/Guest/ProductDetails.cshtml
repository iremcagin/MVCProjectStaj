        height: 100%;
        object-fit: cover;
    }

    .logo-container {
        position: absolute;
        bottom: 20px; /* Adjust according to your preference */
        left: 20px; /* Adjust according to your preference */
        width: 80px;
        height: 80px;
        border-radius: 50%;
        overflow: hidden;
        border: 3px solid #fff; /* Optional: add a border around the logo */
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.3); /* Optional: add a shadow effect */
    }

    .logo-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }



    .rating {
        display: flex;
        direction: rtl;
        font-size: 1.5em;
        unicode-bidi: bidi-override;
        text-align: center;
        user-select: none;
    }

        .rating input {
            display: none;
        }

        .rating label {
            color: #ccc;
            cursor: pointer;
            display: block;
            position: relative;
            width: 1.1em;
        }

            .rating label:before {
                content: '\2605'; /* Star symbol */
            }

        .rating input:checked ~ label {
            color: #f5b301;
        }

        .rating label:hover,
        .rating label:hover ~ label {
            color: #f5b301;
        }


    .count-control {
        display: flex;
        align-items: center;
    }

    .count-input {
        width: 20px;
        height: 15px;
        text-align: center;
        border: 1px solid #000;
        margin: 0 5px;
    }

    .count-btn {
        width: 12px;
        height: 12px;
        font-size: 18px;
        display: flex;
        align-items: center;
        justify-content: center;
    }
